  <script>
    function submitForm(event) {
      event.preventDefault();
      const playerName = document.getElementById("playerName").value.trim();
      if (playerName) {
        alert("Welcome " + playerName + "! Ready to play?");
        window.location.href = "game.html"; // Example redirect
      }
    }
  </script>
