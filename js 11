// ملف script.js

// حالة اللعبة
let isPlaying = false;

function startGame() {
  isPlaying = true;
  document.getElementById('messages').textContent = "اللعبة بدأت! حظًا موفقًا!";
  document.getElementById('gameOver').style.display = "none";
}

function pauseGame() {
  if (isPlaying) {
    isPlaying = false;
    document.getElementById('messages').textContent = "اللعبة متوقفة مؤقتًا!";
  }
}

function resetGame() {
  isPlaying = false;
  document.getElementById('messages').textContent = "تمت إعادة ضبط اللعبة!";
  document.getElementById('gameOver').style.display = "none";
}

// بيانات اللاعبين
const data = [
  { name: "Player1", age: 25 },
  { name: "Player2", age: 30 }
];

// عرض بيانات اللاعبين
const playerData = document.getElementById('player-data');
data.forEach(player => {
  const div = document.createElement('div');
  div.className = 'player-info';
  div.textContent = `اسم: ${player.name}, العمر: ${player.age}`;
  playerData.appendChild(div);
});
